{% extends 'layout.html.twig' %}

{% set active = 'homepage' %}

{% block content %}

   <h2>{{ concert.getTitle }}</h2>
         <div>
         
              {% if concert.getImage %}
                  <img class="descr" src="/images/{{ concert.getImage }}" alt="{{ concert.getTitle }}" align="right">
              {% endif %}
              <div>
                 {{ concert.getDescription }}
              </div>
              
              <div>{{ concert.getDate }} {{ concert.getTime }}</div>
              
              <h4>Ваши места:</h4>
             
         </div>
   
        <form action="/order/{{ concert.getId }}" method="POST">
        
         {% for row in row %}
            <div>{{ row.price }}</div>
            <div>количество билетов {{ row.col }}</div>
            
            
        {% endfor %}
        
        
        
        
        <div class="form-group row">
            <div class="col-2" >&nbsp;</div>
            <div class="col-2" ><button class="btn btn-lg btn-primary btn-block" type="submit">Подтвердить</button></div>
        </div>
        
        </form>
       
    


{% endblock %}