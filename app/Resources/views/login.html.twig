{% extends 'layout.html.twig' %}

{% block content %}

      <form action="{{ path('admin_login_check') }}" method="post" class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input id="inputEmail"  class="form-control" placeholder="Email address" required="" autofocus="" type="email" name="_username" value="{{ last_username }}">
        <label for="inputPassword" class="sr-only">Password</label>
        <input id="inputPassword" class="form-control" placeholder="Password" required="" type="password" name="_password">
        <div class="checkbox">
        
        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}          
        
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      </form>
      
{% endblock %}