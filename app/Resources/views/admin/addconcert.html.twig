{% extends 'layout.html.twig' %}

{% block content %}

  <div>Admin panel</div>
 
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link <!--active-->" href="/admin">Заявки</a>
        </li>
        
    </ul>

    <h2>Добавить новый концерт</h2>
    
    <form method="POST" action="/admin/addconcert">
        <div class="form-group row">
            <label for="title-input" class="col-2 col-form-label">Название</label>
            <div class="col-10">
                <input class="form-control" type="text" value="" id="title-input" name="title">
            </div>
        </div>
        <div class="form-group row">
            <label for="description-input" class="col-2 col-form-label">Описание</label>
            <div class="col-10">
                <textarea class="form-control" id="description-input" name="title"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="image-input" class="col-2 col-form-label">Картинка</label>
            <div class="col-10">
                <input class="form-control" type="file" value="" id="image-input" name="image">
            </div>
        </div>    
        <div class="form-group row">
            <label for="date-input" class="col-2 col-form-label">Дата</label>
            <div class="col-2">
                <input class="form-control" type="date" value="" id="date-input" name="date">
            </div>
        </div>
        <div class="form-group row">
            <label for="time-input" class="col-2 col-form-label">Время</label>
            <div class="col-2">
                <input class="form-control" type="time" value="" id="time-input" name="time">
            </div>
        </div>    
        <div class="form-group row">
            <label for="publish-input" class="col-2 col-form-label">Публиковать</label>
            <div class="col-2">
                 <input type="checkbox" class="publish-input"> 
            </div>
        </div>    
        <div class="form-group row">
            <div class="col-2" >&nbsp;</div>
            <div class="col-2">
                 <button class="btn btn-lg btn-primary btn-block" type="submit">Сохранить</button>
            </div>
        </div>        
    </form>
</div>

{% endblock %}